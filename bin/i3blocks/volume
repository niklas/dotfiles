CURVOL=$(pacmd list-sinks|grep -A 15 '* index'| awk '/volume: front/{ print $5 }' | sed 's/%//g')
MUTED=$(pacmd list-sinks|grep -A 15 '* index'|awk '/muted:/{ print $2 }')
SOURCE_MUTED=$(pacmd list-sources|grep -A 15 '* index'|awk '/muted:/{ print $2 }')

O="${CURVOL}%"

if [[ $MUTED = 'yes' ]]
then
  O="M: $O"
else
  O="♪: $O"
fi

if [[ $SOURCE_MUTED = 'no' ]]
then
  O="$O ♎"
fi

echo "${O}"
