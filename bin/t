#!/usr/bin/env ruby

require "color"

def terminal(opts = {})
  args = opts.map {|k,v| ["-#{k}", v] }.flatten
  pid = Process.spawn 'urxvt', *args
  Process.detach pid
end

def random_color
  Color::HSL.from_fraction(rand, 0.5, 0.5).to_rgb.html
rescue
  '#FFFFFF'
end

if $0 == __FILE__
  terminal tint: random_color
end
