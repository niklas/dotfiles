#!/usr/bin/env ruby

def terminal(name=nil)
  pid = if name
      Process.spawn 'urxvt', '-name', name
    else
      Process.spawn 'urxvt'
    end
  Process.detach pid
end

case Dir.pwd
when %r{(?:clockwork|heutekaufen)$}
  terminal('term-Rails')
when %r{(?:clockwork-js)$}
  terminal('term-Ember')
else
  terminal
end
